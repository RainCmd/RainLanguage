{
    "name": "rain-language",
    "displayName": "雨言",
    "description": "对雨言提供关键字高亮，代码片段完成，代码格式化和远程调试等功能",
    "version": "2.0.0",
    "publisher": "RainCmd",
    "engines": {
        "vscode": "^1.28.0"
    },
    "license": "MIT",
    "icon": "images/rain.png",
    "categories": [
        "Programming Languages",
        "Formatters",
        "Debuggers"
    ],
    "activationEvents": [
        "onDebug"
    ],
    "repository": {
        "type": "git",
        "url": "https://github.com/RainCmd/RainLanguage.git"
    },
    "main": "./out/extension.js",
    "scripts": {
        "编译": "tsc -b",
        "安装依赖": "npm install",
        "打包": "vsce package",
        "发布": "vsce publish"
    },
    "devDependencies": {
        "@types/node": "^17.0.21",
        "@types/vscode": "^1.28.0",
        "typescript": "^4.8.4",
        "vsce": "^2.15.0"
    },
    "dependencies": {
        "iconv-lite": "^0.6.3",
        "@vscode/debugadapter": "^1.61.0",
		"vscode-languageclient": "^9.0.1"
    },
    "contributes": {
        "languages": [
            {
                "id": "雨言",
                "extensions": [
                    ".rain"
                ],
                "aliases": [
                    "RainLanguage",
                    "雨言"
                ],
                "icon": {
                    "dark": "./images/rain-dark.png",
                    "light": "./images/rain-light.png"
                },
                "configuration": "./language-configuration.json"
            }
        ],
        "menus": {
            "editor/title/run": [
                {
                    "command": "cmd.雨言调试",
                    "when": "resourceLangId == 雨言 && !inDebugMode"
                },
                {
                    "command": "cmd.附加到进程",
                    "when": "resourceLangId == 雨言 && !inDebugMode"
                },
                {
                    "command": "cmd.核心库定义",
                    "when": "resourceLangId == 雨言"
                },
                {
                    "command": "cmd.debug.重启雨言服务",
                    "when": "resourceLangId == 雨言 && extensionDebug"
                }
            ]
        },
        "commands": [
            {
                "command": "cmd.雨言调试",
                "title": "调试",
                "icon": "$(debug-alt)"
            },
            {
                "command": "cmd.附加到进程",
                "title": "附加到进程",
                "icon": "$(sort-precedence)"
            },
            {
                "command": "cmd.核心库定义",
                "title": "核心库定义",
                "icon": "$(remote-explorer-documentation)"
            },
            {
                "command": "cmd.debug.重启雨言服务",
                "title": "重启雨言服务",
                "icon": "$(debug-restart)"
            }
        ],
        "snippets": [
            {
                "language": "雨言",
                "path": "./snippets.json"
            }
        ],
        "breakpoints": [
            {
                "language": "雨言"
            }
        ],
        "debuggers": [
            {
                "type": "雨言调试运行",
                "label": "直接运行并调试",
                "configurationAttributes": {
                    "launch": {
                        "required": [
                            "ProjectName",
                            "EntryPoint",
                            "Timestep",
                            "ErrorLevel",
                            "Fixed"
                        ],
                        "properties": {
                            "ProjectName": {
                                "type": "string",
                                "description": "程序集名",
                                "default": "RainTest"
                            },
                            "EntryPoint": {
                                "type": "string",
                                "description": "入口函数",
                                "default": "Main"
                            },
                            "Timestep": {
                                "type": "number",
                                "description": "一帧的时长(毫秒)",
                                "default": 100
                            },
                            "ErrorLevel": {
                                "type": "number",
                                "description": "警告日志输出等级，最高8级",
                                "default": 4
                            },
                            "Fixed":{
                                "type": "boolean",
                                "description": "使用定点数计算",
                                "default": false
                            }
                        }
                    }
                }
            },
            {
                "type": "雨言附加到进程",
                "label": "附加到其他进程，对进程中运行的雨言进行调试",
                "configurationAttributes": {
                    "attach": {
                        "required": [
                            "ProjectName",
                            "Fixed"
                        ],
                        "properties": {
                            "ProjectName": {
                                "type": "string",
                                "description": "程序集名",
                                "default": "RainTest"
                            },
                            "Fixed":{
                                "type": "boolean",
                                "description": "使用定点数计算",
                                "default": false
                            }
                        }
                    }
                }
            }
        ],
        "grammars": [
            {
                "language": "雨言",
                "scopeName": "source.雨言",
                "path": "./rain.tmLanguage.json"
            }
        ],
        "views": {
            "debug":[
                {
                    "id": "RainKernelState",
                    "name": "虚拟机状态视图",
                    "type": "webview"
                }
            ]
        }
    }
}